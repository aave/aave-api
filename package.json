    "cors": "^2.8.5",
    "dayjs": "^1.10.3",
    "env-cmd": "^10.1.0",
    "ethers": "^5.4.7",
    "express": "^4.17.1",
    "graphql": "^15.4.0",
    "graphql-request": "^3.4.0",
    "helmet": "^4.3.1",
    "inversify": "^5.0.5",
    "mongoose": "^5.11.13",
    "morgan": "^1.10.0",
    "reflect-metadata": "^0.1.13",
    "winston": "^3.3.3"
