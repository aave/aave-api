  "name": "aave-api",
  "description": "Aave API",
  "keywords": [],
  "private": false,
  "license": "BSD-3-Clause",
  "main": "index.ts",
  "scripts": {
    "start": "npm i && nodemon",
    "prod": "ts-node ./src/index.ts",
